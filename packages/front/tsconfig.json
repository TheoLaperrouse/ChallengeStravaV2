{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"baseUrl": "."
	},
	"include": ["src/**/*.ts", "src/**/*.vue", "src/vite-env.d.ts"],
	"exclude": ["node_modules", "dist"]
}
